<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="30dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workout Type:"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <com.jds.fitnessjunkiess.getfitapp.CompoundViews.CustomCheckbox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:textLabel="Cardio"/>
            <com.jds.fitnessjunkiess.getfitapp.CompoundViews.CustomCheckbox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:textLabel="Body Weight"/>
            <com.jds.fitnessjunkiess.getfitapp.CompoundViews.CustomCheckbox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:textLabel="Weights"/>
            <com.jds.fitnessjunkiess.getfitapp.CompoundViews.CustomCheckbox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:textLabel="Custom"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Muscle Groups:"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <com.jds.fitnessjunkiess.getfitapp.CompoundViews.CustomCheckbox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:textLabel="Back"/>
            <com.jds.fitnessjunkiess.getfitapp.CompoundViews.CustomCheckbox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:textLabel="Bicpes"/>
            <com.jds.fitnessjunkiess.getfitapp.CompoundViews.CustomCheckbox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:textLabel="ABS"/>
            <com.jds.fitnessjunkiess.getfitapp.CompoundViews.CustomCheckbox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:textLabel="Triceps"/>
            <com.jds.fitnessjunkiess.getfitapp.CompoundViews.CustomCheckbox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:textLabel="Legs"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>