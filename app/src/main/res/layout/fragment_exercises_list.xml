                    <Button android:id="@+id/view_custom_exercises_btn" android:text="Custom exercises" android:padding="20dp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                </LinearLayout>
            </HorizontalScrollView>
        </TableRow>
        <TableRow>
            <TextView android:text="Search by muscle group:" android:layout_span="3"/>
        </TableRow>
        <TableRow>
            <Button android:id="@+id/view_abs_exercises_btn" android:text="Abs" android:padding="20dp"/>
            <Button android:id="@+id/view_biceps_exercises_btn" android:text="Biceps" android:padding="20dp"/>
